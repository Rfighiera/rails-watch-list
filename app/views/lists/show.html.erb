<h1><%= @list.name %></h1>
<% @list.bookmarks.each do |bookmark| %>
  <div>
    <h3><%= bookmark.movie.title %></h3>
    <p><%= bookmark.comment %></p>
    <%= link_to "Supprimer", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr ?" } %>
  </div>
<% end %>
<%= link_to "Ajouter un film", new_list_bookmark_path(@list) %>
<%= link_to "Retour aux listes", lists_path %>
